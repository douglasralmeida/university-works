exefile="$1"
diff="diff -iad"
declare -a arquivosteste=("test/t1" "test/t2")
declare -a arquivosrespostas=("test/r1" "test/r2")
red=$'\e[1;31m'
grn=$'\e[1;32m'
end=$'\e[0m'

echo $exefile

for i in "${!arquivostestes[*]}"; do
	printf "Teste %s..." "${arquivosteste[$i]}"
	
	"./$exefile" < ${arquivosteste[$i]} 1>test/resultado

	if diff test/resultado ${arquivosrespostas[$i]} >/dev/null;
	then
		printf "[${grn}OK${end}]\n";
	else
		printf "[${red}Falha${end}]\n";
	fi
done

exit 0
